from platform import node


class Node(object):
    def __init__(self, data):
        self.data = data
        self.next = node

class Linkedlist(object):
    def __init__(self):
        self.head = None

    def append(self, data):
        new_mode = Node(data)
        if not self.head:
            self.head = new_mode
            return
        last = self.head
    def prepend(self, data):
        new_node = Node(data)
        new_node.next = self.head
        self.head = new_node

    def print_list(self):
        cur = self.head
        while cur:
            print (cur.data, end=" -> ")
            cur = cur.next
        print("None")

# Assignment 2: Removing a node
def remove(self, data):
    cur = self.head

    # Case: The node to remove is the head
    if cur and cur.data == data:
        self.head = cur.next
        cur = None
        return

    # Case: Search for the nose to remove
    prev = None
    while cur and cur.data != data:
        prev = cur
        cur = cur.next
    if cur is None: # Data not found
        return

    prev.next = cur.next # Bypass the node
    cur = None


